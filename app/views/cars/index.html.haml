%p#notice= notice
%h1 Cars
%table
  %thead
    %tr
      %th Make
      %th Model
      %th Year
      %th{:colspan => "3"}
  %tbody
    - @cars.each do |car|
      %tr
        %td= car.make
        %td= car.model
        %td= car.year
        %td= link_to 'Show', car
        %td= link_to 'Edit', edit_car_path(car)
        %td= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Car', new_car_path
